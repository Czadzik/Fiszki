<Window x:Class="Stories.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stories"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
      <Image  Grid.Column="1" Grid.Row="1" x:Name="ShowImageXML"></Image>
        <TextBlock Background="Brown" x:Name="EngWordTB" Grid.Column="1" Grid.Row="3"></TextBlock>
        <TextBlock Background="Aqua" x:Name="PolWordTB" Grid.Column="2" Grid.Row="3"></TextBlock>
        <TextBox x:Name="id" Text="id" Grid.Row="0" Grid.Column="0"></TextBox>
        <TextBox x:Name="tag"  Text="tag" Grid.Row="0" Grid.Column="1"></TextBox>
        
        <Button Content="Załaduj" Grid.Column="2" Click="Zmien_W_Przód_Click"></Button>
    </Grid>
</Window>
